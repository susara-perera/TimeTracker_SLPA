{
  "name": "time-attendance-system",
  "version": "1.0.0",
  "description": "A comprehensive Time Attendance System using MERN stack",
  "main": "server.js",
  "scripts": {
    "start": "cd backend && node server.js",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd backend && nodemon server.js",
    "server-only": "cd backend && npm run dev",
    "client": "cd frontend && npm start",
    "install-backend": "cd backend && npm install",
    "install-client": "cd frontend && npm install",
    "install-all": "npm run install-backend && npm run install-client",
    "heroku-postbuild": "npm run install-client && npm run build",
    "build": "cd frontend && npm run build"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@mui/icons-material": "^7.2.0",
    "@mui/material": "^7.2.0",
    "axios": "^1.11.0",
    "bcryptjs": "^2.4.3",
    "chart.js": "^4.5.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.10.0",
    "express-validator": "^7.0.1",
    "formik": "^2.4.6",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.2",
    "jwt-decode": "^4.0.0",
    "moment": "^2.30.1",
    "mongoose": "^7.5.0",
    "multer": "^1.4.5-lts.1",
    "node-fetch": "^2.7.0",
    "react-chartjs-2": "^5.3.0",
    "react-router-dom": "^7.7.1",
    "yup": "^1.7.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.1"
  },
  "keywords": [
    "attendance",
    "time-tracking",
    "mern",
    "mongodb",
    "express",
    "react",
    "nodejs"
  ],
  "author": "Your Name",
  "license": "MIT"
}
